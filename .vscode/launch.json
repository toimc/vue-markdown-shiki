  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "runtimeExecutable": "npm",
      "runtimeVersion": "18.15.0",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "stopOnEntry": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Rollup Debug",
      "program": "${workspaceFolder}/node_modules/rollup/dist/bin/rollup",
      "args": [
        "-c",
        "${workspaceFolder}/rolltest.config.js"
      ],
      "runtimeArgs": ["--nolazy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}